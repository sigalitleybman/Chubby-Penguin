<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:centerColor="@color/blue_btn_start" android:startColor="@color/cream"
                android:endColor="@color/cream"/>
            <stroke android:width="3dp"
                android:color="@color/black"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:centerColor="@color/cream" android:endColor="@color/blue_btn_start"
                android:startColor="@color/blue_btn_start"/>
            <stroke android:width="3dp"
                android:color="@color/black"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

</selector>
