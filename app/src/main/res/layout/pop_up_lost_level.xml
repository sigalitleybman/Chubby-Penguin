<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/finished_popup"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/lost_level"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_view_next_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_congratulations"
        android:text="@string/try_again"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/lost_penguin"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/sad_penguin" />

    <ImageButton
        android:id="@+id/image_button_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:scaleType="fitXY"


        android:src="@drawable/arrow_when_finished_level" />

</RelativeLayout>