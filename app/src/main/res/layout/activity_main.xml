<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/relative_main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/image_button_volume_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/volume_up"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/image_button_volume_off"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/volume_off"
            android:visibility="invisible"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/image_button_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:background="@null"
            android:onClick="showSettingsPopup"
            android:src="@drawable/settings"
            app:tint="@color/black" />


        <ImageButton
            android:id="@+id/image_button_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/image_button_settings"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@null"
            android:onClick="showInfoPopup"
            android:src="@drawable/info"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/text_view_ski_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_button_info"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="@string/main_screen_title"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:layout_centerHorizontal="true"/>
<!--        android:fontFamily="@font/snow_font"-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_ski_title"
                android:text="@string/lets_start_button"
                android:layout_centerInParent="true"
               android:layout_marginTop="350dp"
                android:background="@drawable/btn_start_selector"/>
    </RelativeLayout>
</ScrollView>

